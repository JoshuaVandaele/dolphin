{
  // Requires https://github.com/eclipse-cdt-cloud/cdt-gdb-vscode
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Release",
      "type": "gdb",
      "request": "launch",
      "program": "dolphin-emu",
      "arguments": "-C Dolphin.Core.Fastmem=0",
      "environment": {
        "DOLPHIN_EMU_USERPATH": "${workspaceRoot}/build/Binaries/userpath"
      },
      "cwd": "${workspaceRoot}/build/Binaries",
      "preLaunchTask": "Build Dolphin (Release)"
    },
    {
      "name": "Debug",
      "type": "gdb",
      "request": "launch",
      "program": "dolphin-emu",
      "arguments": "-d -C Dolphin.Core.Fastmem=0",
      "environment": {
        "DOLPHIN_EMU_USERPATH": "${workspaceRoot}/build/Binaries/userpath"
      },
      "cwd": "${workspaceRoot}/build/Binaries",
      "preLaunchTask": "Build Dolphin (Debug)"
    }
  ]
}
