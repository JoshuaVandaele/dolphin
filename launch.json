{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Release",
      "type": "gdb",
      "request": "launch",
      "target": "dolphin-emu",
      "env": {
        "QT_QPA_PLATFORM": "xcb",
        "DOLPHIN_EMU_USERPATH": "${workspaceRoot}/build/Binaries/userpath"
      },
      "cwd": "${workspaceRoot}/build/Binaries",
      "valuesFormatting": "parseText",
      "preLaunchTask": "Build Dolphin (Release)"
    },
    {
      "name": "Debug",
      "type": "gdb",
      "request": "launch",
      "target": "dolphin-emu",
      "arguments": "-d",
      "env": {
        "QT_QPA_PLATFORM": "xcb"
        // "DOLPHIN_EMU_USERPATH": "${workspaceRoot}/build/Binaries/userpath"
      },
      "cwd": "${workspaceRoot}/build/Binaries",
      "valuesFormatting": "parseText",
      "preLaunchTask": "Build Dolphin (Debug)"
    }
  ]
}
